@model UET_BTL.Model.Entities.StudentDetail

@{
    Layout = null;
    Layout = "~/Areas/Member/Views/Shared/_LayoutCommon.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h4>Tên môn học: @Model.Subject.Name  @Model.Subject.SubjectCode</h4>
    <h4>Số tín chỉ: @Model.Subject.CreditNumber</h4>
    <h4>Tên giảng viên: @Model.Teacher.Name</h4>

    @if (ViewBag.Message != null)
    {
        <h1>@ViewBag.Message</h1>
    }
    else
    {
        using (Html.BeginForm())
        {
            <div class="row">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Các tiêu chí đánh giá</th>
                            <th>20</th>
                            <th>40</th>
                            <th>60</th>
                            <th>80</th>
                            <th>100</th>
                        </tr>
                    </thead>
                    <tbody style="color: blue; background: #b2d7cfd6;">
                        @{
                            for (int i = 0; i < ViewBag.Count; i++)
                            {

                                <tr>
                                    <td>
                                        @ViewBag.ContentSurvey[@i]
                                    </td>
                                    <td>
                                        @Html.RadioButton(@i.ToString(), 20)
                                    </td>
                                    <td>
                                        @Html.RadioButton(@i.ToString(), 40)
                                    </td>
                                    <td>
                                        @Html.RadioButton(@i.ToString(), 60)
                                    </td>
                                    <td>
                                        @Html.RadioButton(@i.ToString(), 80)
                                    </td>
                                    <td>
                                        @Html.RadioButton(@i.ToString(), 100)
                                    </td>
                                </tr>

                            }

                        }
                    </tbody>



                </table>
            </div>
            @Html.Hidden("id", Model.SubjectID)
            @Html.Hidden("studentDetailID", Model.StudentDetailID)
            <h4> ý kiến đóng góp:  <input type="text" name="note" value="" /></h4>
            <hr />
            <input type="submit" value="Submit" class="btn btn-primary" />

            @ViewBag.Message2
        }
    }

</body>
</html>

@using PagedList;
@using PagedList.Mvc;
@model PagedList<UET_BTL.Model.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.ThongBao != null)
{
    <h2>@ViewBag.ThongBao</h2>
}
else
{

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h2 style="font-weight:bold;color:blue">Quản lý sinh viên</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            @using (Html.BeginForm("Index", "Students", FormMethod.Post))
            {
                <div class="input-group input-search">
                    <input type="text" class="form-control" name="txtTimKiem" placeholder="Tìm kiếm sinh viên..." required>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Search</button>
                    </span>
                </div><!-- /input-group -->
            }
        </div>
    </div>
    <h4>@ViewBag.messageSearch</h4>
    <h4>Tổng số sinh viên : @ViewBag.sum</h4>
    <p>
       @* @Html.ActionLink("THÊM MỚI", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })*@
        <button class="btn btn-primary" id="add-button">Thêm mới</button>
    </p>
    <div class="content-teacher">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="btn-primary">
                        <th>STT</th>
                        <th>Họ và tên</th>
                        <th>Khóa học</th>
                        <th>Địa chỉ email</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Tùy chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model)
                    {
                        i = i + 1;
                        <tr class="table-striped">
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Course)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PassWord)
                            </td>
                            <td>
                                <a href="#" class="btn btn-warning edit-student" id="@item.StudentID">Sửa</a>
                                <a href="#" class="btn btn-danger delete-student" id="@item.StudentID">Xóa</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <form action="/Students/ImportStudent" method="post" enctype="multipart/form-data">
        Import danh sách sinh viên từ excel:<br>
        <input type="file" name="fileUpload">
        <br>

        <input type="submit" value="Import">
    </form>


    if (Model.PageCount > 1)
    {
        <div class="menu-trang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    }
}

<div class="background-delete">
    <div class="confirm-delete-student">

    </div>
</div>
<div class="create-student">
    <div class="add-tab">
        <div class="header-tab">
            <h4>Thêm mới sinh viên</h4>
        </div>
        <div class="information-content  table-responsive">
            <form action="/Students/Create" id="addStudent" method="post">
                <table class="table  ">
                    <tr>
                        <td>Họ và tên</td>
                        <td><input name="Name" type="text" class="input-information name" value="" maxlength="200" id="studentName" required=""></td>
                    </tr>
                    <tbody>
                        <tr>
                            <td>Mã sinh viên</td>
                            <td><input name="StudentCode" type="text" data-toggle="tooltip" data-placement="bottom" title="Vui lòng nhập mã sinh viên là gồm 8 chữ số từ 0-9" class="input-information" value="" id="studentId" required=""></td>
                        </tr>
                        <tr>
                            <td>Khóa học</td>
                            <td><input name="Course" type="text" class="input-information" value="" id="studentClass" required=""></td>
                        </tr>
                        <tr>
                            <td>Ngày sinh</td>
                            <td><input name="DateOfBirth" type="date" class="input-information" value="" id="studentDate"></td>
                        </tr>
                        <tr>
                            <td>Địa chỉ email</td>
                            <td><input name="Email" type="email" data-toggle="tooltip" data-placement="bottom" title="Email có dạng x@vnu.edu.vn với x là 8 chữ số từ 0-9" class="input-information" value="" id="studentEmail" required=""></td>
                        </tr>
                        <tr>
                            <td>Tên đăng nhập</td>
                            <td><input name="UserName" type="text" data-toggle="tooltip" data-placement="bottom" title="Tên dăng nhập không được trùng trong hệ thống" class="input-information" value="" id="studentUsername" required=""></td>
                        </tr>
                        <tr>
                            <td>Mật khẩu</td>
                            <td><input name="PassWord" type="password" class="input-information" value="" id="studentPassword" required=""></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <div class="bottom-button">
                                    <a href="#" class="btn btn-success btn-submit">Thêm mới</a>
                                </div>
                                <div class="bottom-button">
                                    <a href="#" class="btn btn-danger btn-close" id="studentCancel">Hủy bỏ</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </form>

        </div>

    </div>
</div>

@section scripts
{
    @Scripts.Render("~/student/js")
}


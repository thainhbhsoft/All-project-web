@model IEnumerable<UET_BTL.Model.Entities.ContentSurvey>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="header" style="font-weight:bold;color:blue;">Danh sách các tiêu chí đánh giá</h2>

<p>
    @Html.ActionLink("Thêm tiêu chí mới và xóa dữ liệu cũ", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

<div class="content-teacher">
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="btn-primary">
                    <th>STT</th>
                    <th>
                        Tiêu chí đánh giá
                    </th>
                    <th>Tùy chỉnh</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0; }
                @foreach (var item in Model)
                {
                    i = i + 1;
                    <tr class="table-striped">
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.ActionLink("sửa", "Edit", new { id = item.ContentSurveyID }, htmlAttributes: new { @class = "btn btn-warning" })
                            <a href="#" class="btn btn-danger delete-ContentSurvey" id="@item.ContentSurveyID">Xóa</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div class="confirm-delete-ContentSurvey">

</div>

@section scripts
{
    @Scripts.Render("~/survey/js")
}

@model IEnumerable<UET_BTL_VERSION_1.Models.ContentSurvey>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách các tiêu chí đánh giá</h2>

<p>
    @Html.ActionLink("Thêm tiêu chí mới và xóa dữ liệu cũ", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>STT</th>
        <th>
           Tiêu chí đánh giá
        </th>
        <th></th>
    </tr>
    @{ int i = 0; }
    @foreach (var item in Model)
    {
        i = i + 1;
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ContentSurveyID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ContentSurveyID })
        </td>
    </tr>
    }

</table>

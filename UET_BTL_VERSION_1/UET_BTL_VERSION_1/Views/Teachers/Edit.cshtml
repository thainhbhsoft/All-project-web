        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="TeacherCode">Mã giảng viên</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.TeacherCode, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                @Html.ValidationMessageFor(model => model.TeacherCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

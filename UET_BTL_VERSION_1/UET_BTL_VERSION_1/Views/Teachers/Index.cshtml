@using PagedList;
@using PagedList.Mvc;
@model PagedList<UET_BTL.Model.Entities.Teacher>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.ThongBao != null)
{
    <h2>@ViewBag.ThongBao</h2>
}
else
{
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h2 style="font-weight:bold;color:blue;">Quản lý giảng viên</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            @using (Html.BeginForm("Index", "Teachers", FormMethod.Post))
            {
                <div class="input-group  input-search">
                    <input type="text" class="form-control" name="txtTimKiem" placeholder="Tìm kiếm giảng viên..." required>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Search</button>
                    </span>
                </div><!-- /input-group -->
            }
        </div>
    </div>

    <h4>@ViewBag.messageSearch</h4>
    <h4>Tổng số giảng viên : @ViewBag.sum</h4>
    <p>
        @Html.ActionLink("THÊM MỚI", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
    </p>

    <div class="content-teacher">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="btn-primary">
                        <th>STT</th>
                        <th>Họ và tên</th>
                        <th>Địa chỉ email</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Tùy chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model)
                    {
                        i = i + 1;
                    <tr class="table-striped">
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PassWord)
                        </td>
                        <td>
                            @Html.ActionLink("sửa", "Edit", new { id = item.TeacherID }, htmlAttributes: new { @class = "btn btn-warning" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.TeacherID }, htmlAttributes: new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <form action="/Teachers/ImportTeacher" method="post" enctype="multipart/form-data">
        Import danh sách giảng viên từ excel:<br>
        <input type="file" name="fileUpload">
        <br>
        <input type="submit" value="Import">
    </form>

    if (Model.PageCount > 1)
    {
        <div class="menu-trang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    }
}



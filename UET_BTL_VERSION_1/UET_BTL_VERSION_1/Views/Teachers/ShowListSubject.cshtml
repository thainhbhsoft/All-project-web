@model IEnumerable<UET_BTL_VERSION_1.Models.StudentDetail>

@{
    ViewBag.Title = "ShowListSubject";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h2>Danh sách các học phần đang dạy</h2>


<table class="table table table-striped table-bordered table-hover">
    <tr>
        <th>
            Tên học phần
        </th>
        <th>
            Mã học phần
        </th>
        <th>
           Tên giảng viên
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.SubjectCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>
        <td>
            @Html.ActionLink("Danh sách lớp", "ShowClass", new { id = item.Subject.SubjectID }) ----
            @Html.ActionLink("Kết quả đánh giá", "ShowResultSurvey", new { id = item.Subject.SubjectID })
        </td>
    </tr>
}

</table>

@model IEnumerable<UET_BTL.Model.Entities.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="header" style="font-weight:bold;color:blue;">Danh sách các học phần</h2>
<div class="content-teacher">
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="btn-primary">
                    <th>
                        STT
                    </th>
                    <th>
                        Tên học phần
                    </th>
                    <th>
                        Mã học phần
                    </th>
                    <th>
                        Số tín chỉ
                    </th>
                    <th>
                        Phòng học
                    </th>
                    <th>
                        Thời gian,tiết
                    </th>
                    <th>    Tùy chọn</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0; }
                @foreach (var item in Model)
                {
                    i = i + 1;
                    <tr class="table-striped">
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreditNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassRoom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeTeach)
                        </td>
                        <td>
                            @Html.ActionLink("List", "ShowClass", new { id = item.SubjectID }, htmlAttributes: new { @class = "btn btn-warning" })
                            @Html.ActionLink("Result", "ShowResultSurvey", new { id = item.SubjectID }, htmlAttributes: new { @class = "btn btn-primary" })
                            <a href="#" class="btn btn-danger delete-subject" id="@item.SubjectID">Xóa</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<form action="/Subjects/ImportSubject" method="post" enctype="multipart/form-data">
    Import một danh sách lớp học phần từ excel:<br>
    <input type="file" name="fileUpload">
    <br>
    <input type="submit" value="Import">
</form>

<div class="confirm-delete-subject">

</div>

@section scripts
{
    @Scripts.Render("~/subject/js")
}

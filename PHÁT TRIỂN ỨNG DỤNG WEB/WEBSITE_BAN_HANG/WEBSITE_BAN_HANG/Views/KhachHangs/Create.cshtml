@model WEBSITE_BAN_HANG.Models.KhachHang
@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
